{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "HA-Components",
  "homepage": "https://REMEMBER TO CHANGE ME.com",
  "items": [
    {
      "name": "type-generator",
      "type": "registry:item",
      "title": "Type Generator",
      "description": "Script to generate types",
      "devDependencies": [
        "tsx"
      ],
      "files": [
        {
          "path": "scripts/generate_entities.ts",
          "type": "registry:file",
          "target": "~/scripts/generate_entities"
        }
      ]
    },
    {
      "name": "auth",
      "type": "registry:block",
      "title": "Auth Files and Components",
      "description": "A complex component used to setup Auth.",
      "registryDependencies": [
        "card"
      ],
      "files": [
        {
          "path": "components/ha-ui/auth/page.tsx",
          "type": "registry:page",
          "target": "app/auth/callback/page.tsx"
        },
        {
          "path": "app/providers/HomeAssistantProvider.tsx",
          "target": "app/providers/HomeAssistantProvider.tsx",
          "type": "registry:item"
        },
        {
          "path": "lib/haAuth.ts",
          "target": "lib/haAuth.ts",
          "type": "registry:lib"
        },
        {
          "path": "lib/haWebsocket.ts",
          "target": "lib/haWebsocket.ts",
          "type": "registry:lib"
        }
      ]
    },
    {
      "name": "camera",
      "type": "registry:block",
      "title": "Simple Camera Component",
      "description": "A WebRTC Camera component for go2RTC",
      "dependencies": [
        "media-chrome"
      ],
      "files": [
        {
          "path": "components/ha-ui/camera.tsx",
          "type": "registry:component",
          "target": "registry:component"
        },
        {
          "path": "components/ha-ui/video-rtc.tsx",
          "type": "registry:lib"
        }
      ]
    },
    {
      "name": "trigger-button",
      "type": "registry:component",
      "title": "Simple Trigger Button Component",
      "description": "Button that with an attached Entity trigger",
      "registryDependencies": [
        "button",
        "@ha-components/auth"
      ],
      "files": [
        {
          "path": "components/ha-ui/trigger-button.tsx",
          "type": "registry:component"
        }
      ]
    },
    {
      "name": "light",
      "type": "registry:component",
      "title": "Simple Light Control Component",
      "description": "A component which allows full control of a light",
      "dependencies": [
        "react-colorful",
        "lucide-react"
      ],
      "registryDependencies": [
        "slider",
        "button",
        "@ha-components/auth"
      ],
      "files": [
        {
          "path": "components/ha-ui/trigger-button.tsx",
          "type": "registry:component"
        }
      ]
    }
  ]
}